<div class="card hoverable">
	<div class="card-content teal darken-2">
		<span class="card-title white-text"><h5>Writing Goals</h5></span>
		<div class="divider"></div>
		<br>
		<ul class="collapsible popout" data-collapsible="accordion">
			<li>
				<div class="collapsible-header teal accent-1"><strong>Set New Goal</strong></div>
				<div class="collapsible-body white">
					<div class="container">
						<%= form_for(@goal, html: {multipart: true}) do |f| %>
							<div class="row center">
								<%= render 'shared/error_messages', object: f.object %>
							</div>
							<div class="input-field">
								<%= f.text_field :description, class: "validate" %>
								<label for="description">Description <span class="red-text">*</span></label>
							</div>
							<div class="input-field">
								<%= f.date_field :deadline, class: "datepicker" %>
								<label for="deadline">Deadline <span class="red-text">*</span></label>
							</div>
							<div class="row center">
								<%= button_tag(:class => "waves-effect waves-light btn green darken-3") do %>
				      		Save <i class="material-icons right">send</i>
				    		<% end %>
				    	</div>
						<% end %>
					</div>
				</div>
			</li>
			<li>
				<div class="collapsible-header teal accent-2 active"><strong>Active Goals</strong></div>
				<div class="collapsible-body white">
					<% if @feed_goals.any? %>
			  			<ul>
			    			<%= render @feed_goals %>
			  			</ul>
			  			<%= will_paginate @feed_goals %>
			  		<% else %>
			  			<div class="container">
			  				<div class="section">
			        		<i>no new goals have been submitted</i>
			        	</div>
			        </div>
					<% end %>
				</div>
			</li>
			<li>
				<div class="collapsible-header teal accent-3"><strong>Achieved Goals</strong></div>
				<div class="collapsible-body white">
					<% if @feed_goals_inactive.any? %>
			  			<ul>
			    			<%= render @feed_goals_inactive %>
			  			</ul>
			  			<%= will_paginate @feed_goals_inactive %>
			  		<% else %>
			  			<div class="container">
			  				<div class="section">
			        		<i>no goals have been achieved</i>
			        	</div>
			        </div>
					<% end %>
				</div>
			</li>
		</ul>
	</div>
</div>