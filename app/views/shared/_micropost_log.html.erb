<div class="card hoverable">
	<div class="card-content">
		<span class="card-title"><h5>Log Writing Session</h5></span>
		<div class="divider"></div>
		<br>
		<%= form_for(@micropost, html: {multipart: true}) do |f| %>
			<div class="row center">
				<%= render 'shared/error_messages', object: f.object %>
			</div>
			<div class="input-field">
				<%= f.text_field :title %>
				<label for="title">Title <span class="red-text">*</span></label>
			</div>
			<div class="row">
				<div class="col l6">
					<div class="input-field">
						<%= f.number_field :hours, :value => 0 %>
						<label for="hours">Hours <span class="red-text">*</span></label>
					</div>
				</div>
				<div class="col l6">
					<div class="input-field">
						<%= f.number_field :minutes, :value => 0 %>
						<label for="minutes">Minutes <span class="red-text">*</span></label>
					</div>
				</div>
				<div class="hidden">
					<%= f.text_field :author, :value => current_user.name %>
				</div>
			</div>
			<div class="row center">
				<%= button_tag(:class => "waves-effect waves-light btn green darken-2") do %>
      		Post <i class="material-icons right">send</i>
    		<% end %>
    	</div>
		<% end %>
	</div>
</div>

<script>
  $('label').addClass('active')
</script>