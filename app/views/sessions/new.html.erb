<% provide(:title, "Log in") %>
<div class="container">
  <div class="section">
    <div class="row">
      <div class="col l8 offset-l2">
        <div class="card indigo darken-4">
          <div class="card-content">
            <span class="card-title white-text">
              <h4>Login</h4>
              <div class="row center">
              <% flash.each do |message_type, message| %>
                <h5><%= content_tag(:div, message, class: "alert alert-#{message_type}") %></h5>
              <% end %>
              </div>
            </span>
            <div class="divider"></div>
            <br>
            <div class="white">
              <%= form_for(:session, url: login_path) do |f| %>
                <br>
                <div class="row">
                  <div class="input-field col l10 offset-l1">
                    <%= f.email_field :email, class: "validate" %>
                    <%= f.label :email, class: "my-label" %>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col l10 offset-l1">
                    <%= f.password_field :password, class: 'validate' %>
                    <%= f.label :password %>
                  </div>
                </div>
                <div class="row center">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
                <div class="row center">
                  <%= button_tag(:class => "waves-effect waves-light btn green darken-2") do %>
                    Login <i class="material-icons right">play_arrow</i>
                  <% end %>
                </div>
                <div class="divider"></div>
                <div class="section">
                  <div class="row center">
                    New User? <strong><%= link_to "Sign up now!", signup_path %></strong>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>