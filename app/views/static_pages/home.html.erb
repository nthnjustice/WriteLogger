<% if logged_in? %>
  <div class="container">
    <div class="section">
      <div class="row">
        <div class="col s12 m12 l12">
          <%= render 'shared/user_info' %>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m12 l12">
          <%= render 'shared/micropost_log' %>
        </div>
        <div class="col s12 m12 l12">
          <%= render 'shared/micropost_form' %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <%= render :template => 'sessions/new' %>
<% end %>